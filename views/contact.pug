html 
  head
    style
      include style.css
      title=title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css")
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#main-navbar")
        span.navbar-toggler-icon
      #main-navbar.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="/views/services.pug") Services
          li.nav-item
            a.nav-link(href="/views/contact.pug") Contact Us
        
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type="text" placeholder="Input...")
          button.btn.btn-primary.my-2.my-sm-0(type="submit") OK
    .container
  form#contact(action='' method='post')
    h3  Contact Form
    h4 Contact us
    fieldset
      input(placeholder='Your name' type='text' tabindex='1' required='' autofocus='')
    fieldset
      input(placeholder='Your Email Address' type='email' tabindex='2' required='')
    fieldset
      input(placeholder='Your Phone Number (optional)' type='tel' tabindex='3' required='')
    fieldset
      input(placeholder='Your Web Site (optional)' type='url' tabindex='4' required='')
    fieldset
      textarea(placeholder='Type your message here....' tabindex='5' required='')
    fieldset
      button#contact-submit(name='submit' type='submit' data-submit='...Sending') Submit